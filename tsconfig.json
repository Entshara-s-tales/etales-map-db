{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "$matchers/*": ["./src/matchers/*"],
      "$src/*": ["./*"]
    },
    "composite": true
  },
  "include": ["src/**/*.ts"]
}
